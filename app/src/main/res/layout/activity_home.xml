<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_home_scene"
    android:padding="24sp"
    android:id="@+id/home_motionLayout"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/title1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/appName"
            android:textAlignment="center"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24sp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filmButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:onClick="onImageView1Click1"
                app:srcCompat="@drawable/homebutton1" />

            <ImageView
                android:id="@+id/todayNutritionButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="6sp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:onClick="onImageView1Click2"
                app:srcCompat="@drawable/homebutton2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/exitButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6sp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:onClick="onImageView1Click3"
                app:srcCompat="@drawable/homebutton3" />

            <ImageView
                android:id="@+id/myProfileButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="6sp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:onClick="onImageView1Click4"
                app:srcCompat="@drawable/homebutton4" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>